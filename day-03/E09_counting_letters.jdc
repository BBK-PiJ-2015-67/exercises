// 9 Counting Letters
//

println("Enter some text:");

String str = readLine();
int len = str.length();
int count = 0;
println("Enter a letter to count (only first letter will be used):");
String ref = readLine();
char letter = ref.charAt(0);

for (int i = 0; i < len; i++) {
    if (str.charAt(i) == letter) {
        count++;
    }
}

println("The letter " + ref + " appeared " + count + " times in your text");
